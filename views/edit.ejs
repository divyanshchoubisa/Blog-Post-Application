<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Edit Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
  </head>
<%- include("partial/header-backToIndex"); -%>
<div class="container box1">
  <form class="newPostForm" action="/edit/:<%=title%>" method="post">
    <div class="">
      <div class="form-group">
        <label for="titleBox">Title</label>
        <input class="form-control" id="titleBox" type="text" name="title" value='<%=title%>'>
      </div>
      <div class="form-group">
        <label for="categBox">Categories</label>
        <input class="form-control" type="text" id="categBox" name="categories" value='<%=categories%>' >
      </div>
      <div class="form-group">
        <label for="contentBox">Content</label>
        <textarea class="form-control" name="content" id="contentBox" rows="4" cols="50"><%=content%></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" name="submit" value="submit">Submit</button>
        <button class="btn btn-primary" type="reset" name="Reset">Cancel</button>
      </div>
    </div>
  </form>
</div>
<%- include("partial/footer"); -%>
